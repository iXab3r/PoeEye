<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:PoeChatWheel.ViewModels"
                    xmlns:controls="clr-namespace:RadialMenu.Controls;assembly=RadialMenu"
                    xmlns:scaffolding="clr-namespace:PoeShared.Scaffolding;assembly=PoeShared">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/PoeShared;component/Themes/Generic.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate DataType="{x:Type viewModels:MenuItemViewModel}">
        <Grid>
            <WrapPanel Orientation="Vertical" 
                   Focusable="False" 
                   ToolTip="{Binding CommandText}">
                <TextBlock Text="{Binding IconText}"
                       FontFamily="{StaticResource FontAwesome}"
                       FontSize="30"
                       TextAlignment="Center" />
                <TextBlock Text="{Binding Text}"
                       TextAlignment="Center" />
            </WrapPanel>
        </Grid>
       
    </DataTemplate>
</ResourceDictionary>