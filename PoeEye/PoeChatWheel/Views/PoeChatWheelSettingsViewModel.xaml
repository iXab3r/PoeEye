<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:PoeChatWheel.ViewModels">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/PoeShared;component/Themes/Generic.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <DataTemplate DataType="{x:Type viewModels:PoeChatWheelSettingsViewModel}">
        <DataTemplate.Resources>
            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource IconLabel}"/>
            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource IconTextBlock}"/>
        </DataTemplate.Resources>

        <Grid Margin="10,5">
            <StackPanel 
                      Orientation="Horizontal" Height="30" Margin="0,2">
                <Label Content="Hotkey:" MinWidth="100"/>
                <ComboBox IsEditable="False" 
                          Width="120"
                          ToolTip="Chat wheel hotkey" ItemsSource="{Binding HotkeysList}" SelectedValue="{Binding Hotkey}" />
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>