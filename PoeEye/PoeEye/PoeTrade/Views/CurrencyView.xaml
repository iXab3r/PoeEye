<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:common="clr-namespace:PoeShared.Common;assembly=PoeShared">
  <DataTemplate x:Key="CurrencyViewKey" DataType="{x:Type common:PoePrice}">
    <DockPanel VerticalAlignment="Center" Margin="5,0" LastChildFill="True"
               ToolTip="{Binding CurrencyType}">
      <Image DockPanel.Dock="Left" 
             Width="20" Height="20" 
             Source="{Binding Converter={StaticResource PriceToImageUriConverter}}"
             Visibility="{Binding RelativeSource={RelativeSource Self}, Path=Source, Converter={StaticResource NullToCollapsedConverter}}"/>
      <TextBlock DockPanel.Dock="Right"
                 TextTrimming="CharacterEllipsis"
                 VerticalAlignment="Center"
                 Text="{Binding}" FontSize="13" Margin="1,0,0,0" />
    </DockPanel>
  </DataTemplate>

  <DataTemplate DataType="{x:Type common:PoePrice}">
    <ContentControl Content="{Binding Price}" ContentTemplate="{StaticResource CurrencyViewKey}" />
  </DataTemplate>

</ResourceDictionary>