<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:viewModels="clr-namespace:PoeEye.PoeTrade.ViewModels">

  <DataTemplate DataType="{x:Type viewModels:ImageViewModel}">
    <Grid>
      <controls:ProgressRing Height="20" Width="20" IsActive="true"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolFalseToCollapsedConverter}}" />
      <ContentControl Content="{Binding Image}" />
    </Grid>
  </DataTemplate>

</ResourceDictionary>