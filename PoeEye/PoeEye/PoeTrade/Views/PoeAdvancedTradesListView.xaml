<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:PoeEye.PoeTrade.ViewModels"
                    xmlns:eye="http://coderush.net/poeeye/">
    
    <DataTemplate DataType="{x:Type viewModels:PoeAdvancedTradesListViewModel}">
        <Grid>
            <ItemsControl Margin="0,10,0,0" eye:ScrollViewerExtensions.AutoScrollToTop="{Binding ScrollToTop, Mode=OneWay}"
                          ItemsSource="{Binding Items}"
                          Style="{StaticResource VirtualizedItemsControlStyle}" />
            <ContentControl Margin="0,0,30,-10" Content="{Binding PageParameter}"
                            HorizontalAlignment="Right" VerticalAlignment="Bottom" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>