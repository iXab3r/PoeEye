<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:blue="http://www.nuget.org/Blue.MVVM">

    <Color x:Key="PoeTradeRemovedItemColor">#FFFF9298</Color>
    <Color x:Key="PoeTradeNewItemColor">#FF92FF98</Color>

    <Color x:Key="SemiPoeTradeRemovedItemColor">#55FF9298</Color>
    <Color x:Key="SemiPoeTradeNewItemColor">#5592FF98</Color>

    <Color x:Key="PoeItemElementalStatColor">#FF8CACBC</Color>
    <Color x:Key="PoeItemPhysicalStatColor">#FFFFFB8C</Color>

    <Color x:Key="PoeItemNoStatColor">#FFFFFFFF</Color>
    <Color x:Key="PoeItemDexStatColor">#FF29BA55</Color>
    <Color x:Key="PoeItemStrStatColor">#FFE16043</Color>
    <Color x:Key="PoeItemIntStatColor">#FF4479A9</Color>

    <Color x:Key="PoeShaperColor">#FF634DA9</Color>
    <Color x:Key="PoeElderColor">#FF66828A</Color>

    <SolidColorBrush x:Key="SemiPoeTradeRemovedItemBrush" Color="{StaticResource SemiPoeTradeRemovedItemColor}" />
    <SolidColorBrush x:Key="SemiPoeTradeNewItemBrush" Color="{StaticResource SemiPoeTradeNewItemColor}" />

    <SolidColorBrush x:Key="PoeTradeRemovedItemBrush" Color="{StaticResource PoeTradeRemovedItemColor}" />
    <SolidColorBrush x:Key="PoeTradeNewItemBrush" Color="{StaticResource PoeTradeNewItemColor}" />

    <SolidColorBrush x:Key="PoeItemElementalStatBrush" Color="{StaticResource PoeItemElementalStatColor}" />
    <SolidColorBrush x:Key="PoeItemPhysicalStatBrush" Color="{StaticResource PoeItemPhysicalStatColor}" />

    <SolidColorBrush x:Key="PoeShaperBrush" Color="{StaticResource PoeShaperColor}" />
    <SolidColorBrush x:Key="PoeElderBrush" Color="{StaticResource PoeElderColor}" />

    <SolidColorBrush x:Key="PoeItemNoStatBrush" Color="{StaticResource PoeItemNoStatColor}" />
    <SolidColorBrush x:Key="PoeItemDexStatBrush" Color="{StaticResource PoeItemDexStatColor}" />
    <SolidColorBrush x:Key="PoeItemStrStatBrush" Color="{StaticResource PoeItemStrStatColor}" />
    <SolidColorBrush x:Key="PoeItemIntStatBrush" Color="{StaticResource PoeItemIntStatColor}" />

    <SolidColorBrush x:Key="PoeItemRarityNormalBrush" Color="White" />
    <SolidColorBrush x:Key="PoeItemRarityMagicBrush" Color="CornflowerBlue" />
    <SolidColorBrush x:Key="PoeItemRarityRareBrush" Color="Yellow" />
    <SolidColorBrush x:Key="PoeItemRarityUniqueBrush" Color="OrangeRed" />

    <SolidColorBrush Color="{StaticResource MenuShadowColor}" Opacity="0.1" x:Key="TabBackgroundBrush" />

</ResourceDictionary>