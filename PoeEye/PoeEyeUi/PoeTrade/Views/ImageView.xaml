<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:PoeEyeUi.PoeTrade.ViewModels"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:converters="clr-namespace:PoeEyeUi.Converters">

    <DataTemplate DataType="{x:Type viewModels:ImageViewModel}">
        <Grid>
            <controls:ProgressRing Height="20" Width="20" IsActive="true" 
                                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <ContentControl Content="{Binding Image}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>