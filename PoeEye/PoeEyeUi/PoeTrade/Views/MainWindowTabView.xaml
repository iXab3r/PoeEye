<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:poeEyeUi="clr-namespace:PoeEyeUi"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    <DataTemplate DataType="{x:Type poeEyeUi:MainWindowTabViewModel}">
        <Grid Margin="0, 10, 0, 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Expander Header="Query" IsExpanded="true">
                <StackPanel>
                    <controls:MetroContentControl Content="{Binding QueryViewModel}"/>
                    <DockPanel>
                        <Button HorizontalAlignment="Right" Width="150" Command="{Binding SearchCommand}" 
                            CommandParameter="{Binding QueryViewModel.PoeQueryBuilder}" 
                            Content="Search"/>
                    </DockPanel>
                </StackPanel>
            </Expander>

            <controls:MetroContentControl Grid.Row="1">
                
                <ItemsControl Style="{StaticResource VirtualizedItemsControlStyle}">
                    <ItemsControl.ItemsSource>
                        <Binding Path="TradesListViewModel.TradesList" />
                    </ItemsControl.ItemsSource>
                </ItemsControl>
            </controls:MetroContentControl>
        </Grid>
    </DataTemplate>
</ResourceDictionary>