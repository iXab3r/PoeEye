<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:poeEyeUi="clr-namespace:PoeEyeUi"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    <DataTemplate DataType="{x:Type poeEyeUi:MainWindowTabViewModel}">
        <Grid Margin="0, 10, 0, 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ContentControl Grid.Row="0" Content="{Binding QueryViewModel}"/>

            <Button Grid.Row="1"
                    Command="{Binding SearchCommand}" 
                    CommandParameter="{Binding QueryViewModel.PoeQueryBuilder}" 
                    Content="Search"/>

            <ContentControl Grid.Row="2">
                <ItemsControl ItemsSource="{Binding TradesListViewModel.TradesList}" Style="{StaticResource VirtualizedItemsControlStyle}"/>
            </ContentControl>
        </Grid>
    </DataTemplate>
</ResourceDictionary>