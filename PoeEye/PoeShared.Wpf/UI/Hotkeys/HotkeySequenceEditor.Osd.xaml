<eye:SharedResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:dd="urn:gong-wpf-dragdrop"
                              xmlns:st="http://schemas.spicytaco.io/"
                              xmlns:eye="clr-namespace:PoeShared.UI"
                              xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <eye:SharedResourceDictionary.MergedDictionaries>
        <eye:SharedResourceDictionary Source="pack://application:,,,/PoeShared.Wpf;component/UI/Hotkeys/HotkeySequenceEditor.Defaults.xaml" />
    </eye:SharedResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type eye:ButtonEx}" x:Key="HotkeySequenceEditorOsdButton" BasedOn="{StaticResource FastButtonExStyle}">
        <Setter Property="Focusable" Value="false" />
        <Setter Property="Foreground" Value="{StaticResource SequenceEditorTextForeground}" />
        <Setter Property="Background" Value="{StaticResource SequenceEditorKeyBackground}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="MinWidth" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="10,0" />
        <Setter Property="CommandParameter" Value="{Binding}" />
        <Setter Property="ClickMode" Value="Release" />
        <Setter Property="dd:DragDrop.IsDragSource" Value="True" />
        <Setter Property="dd:DragDrop.DragDropCopyKeyState" Value="LeftMouseButton" />
        <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource Self}, Path=CommandParameter, Converter={StaticResource KeyToStringConverter}}" />
        <Setter Property="Command" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type eye:HotkeySequenceEditor}}, Path=ViewModel.AddItem}" />

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource MouseOverAccentBrushKey}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type Border}" x:Key="HotkeySequenceOsdBorder">
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />
        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignSelection}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="2.5" />
    </Style>

    <DataTemplate x:Key="OnScreenRecordSettings" DataType="{x:Type eye:HotkeySequenceEditorViewModel}">
        <DataTemplate.Resources>
            <Style TargetType="{x:Type eye:ButtonEx}" BasedOn="{StaticResource HotkeySequenceEditorOsdButton}" />
        </DataTemplate.Resources>
        <Border Style="{StaticResource HotkeySequenceOsdBorder}">
            <st:AutoGrid Columns="130, *" ChildMargin="5,0" Width="500" Focusable="False" RowHeight="30">
                <TextBlock HorizontalAlignment="Right">Record keys</TextBlock>
                <CheckBox IsChecked="{Binding Controller.EnableKeyboardRecording}" />
                <TextBlock HorizontalAlignment="Right">Record mouse clicks</TextBlock>
                <CheckBox IsChecked="{Binding Controller.EnableMouseClicksRecording}"/>
                <TextBlock HorizontalAlignment="Right">Record mouse position</TextBlock>
                <st:StackPanel Orientation="Horizontal" MarginBetweenChildren="5">
                    <st:StackPanel Orientation="Horizontal" MarginBetweenChildren="5" Margin="-2.5,0,0,0">
                        <RadioButton
                            IsChecked="{Binding Controller.MousePositionRecording, Converter={StaticResource EqualToTrueConverter}, ConverterParameter={x:Static eye:MousePositionRecordingType.None}}"
                            Content="No" />
                        <RadioButton
                            IsChecked="{Binding Path=Controller.MousePositionRecording, Converter={StaticResource EqualToTrueConverter}, ConverterParameter={x:Static eye:MousePositionRecordingType.Absolute}}"
                            Content="Absolute" />
                        <RadioButton
                            IsChecked="{Binding Path=Controller.MousePositionRecording, Converter={StaticResource EqualToTrueConverter}, ConverterParameter={x:Static eye:MousePositionRecordingType.Relative}}"
                            Content="Relative" />
                    </st:StackPanel>
                    <TextBlock Text="every" x:Name="MouseRecordingResolutionPrefix" />
                    <eye:NumericUpDownEx MinWidth="40" MaxWidth="140"
                                       Margin="5,0,0,0"
                                       x:Name="MouseRecordingResolution"
                                       materialDesign:TextFieldAssist.SuffixText=" ms"
                                       Value="{Binding Controller.MousePositionRecordingResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource TimeSpanToMillisecondsConverter}}"
                                       Minimum="50" Maximum="1000" Interval="50" />
                </st:StackPanel>
                <TextBlock HorizontalAlignment="Right">Start/stop recording</TextBlock>
                <st:StackPanel Orientation="Horizontal" MarginBetweenChildren="5">
                    <eye:HotKeyBox 
                        HorizontalAlignment="Left"
                        AcceptsModifiers="False"
                        AcceptsTab="False"
                        AcceptsMouseKeys="False"
                        AcceptsMouseWheel="False"
                        HotKey="{Binding Controller.ToggleRecordingHotkey.Value}" />
                    <TextBlock Visibility="{Binding Controller.ToggleRecordingHotkey.HasActualValue, Converter={StaticResource TrueToCollapsedFalseToVisibleConverter}}">(default)</TextBlock>
                </st:StackPanel>
            </st:AutoGrid>
        </Border>
        
       <DataTemplate.Triggers>
           <DataTrigger Binding="{Binding Controller.MousePositionRecording}" Value="{x:Static eye:MousePositionRecordingType.None}">
               <Setter TargetName="MouseRecordingResolutionPrefix" Property="IsEnabled" Value="False"/>
               <Setter TargetName="MouseRecordingResolution" Property="IsEnabled" Value="False"/>
               <Setter TargetName="MouseRecordingResolutionPrefix" Property="Visibility" Value="Hidden"/>
               <Setter TargetName="MouseRecordingResolution" Property="Visibility" Value="Hidden"/>
           </DataTrigger>
       </DataTemplate.Triggers>
    </DataTemplate>

    <DataTemplate x:Key="OnScreenKeyboardMouseBlock">
        <DataTemplate.Resources>
            <Style TargetType="{x:Type eye:ButtonEx}" BasedOn="{StaticResource HotkeySequenceEditorOsdButton}" />
        </DataTemplate.Resources>
        <Border Style="{StaticResource HotkeySequenceOsdBorder}">
            <st:StackPanel Orientation="Vertical" MarginBetweenChildren="10" Margin="0"
                           Focusable="False">
                <st:AutoGrid Columns="*,*,*" ChildMargin="2.5">
                    <eye:ButtonEx CommandParameter="{x:Static MouseButton.Left}" />
                    <eye:ButtonEx CommandParameter="{x:Static MouseButton.Right}" />
                    <eye:ButtonEx CommandParameter="{x:Static MouseButton.Middle}" />
                    <eye:ButtonEx CommandParameter="{x:Static MouseButton.XButton1}" />
                    <eye:ButtonEx CommandParameter="{x:Static MouseButton.XButton2}" />
                    <eye:ButtonEx CommandParameter="{x:Static eye:MouseWheelAction.WheelDown}" />
                    <eye:ButtonEx CommandParameter="{x:Static eye:MouseWheelAction.WheelUp}" />
                </st:AutoGrid>
            </st:StackPanel>
        </Border>
    </DataTemplate>

