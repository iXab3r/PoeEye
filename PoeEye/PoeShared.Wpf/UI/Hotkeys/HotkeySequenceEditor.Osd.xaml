                    <eye:ButtonEx CommandParameter="{x:Static Key.Multiply}" />
                    <eye:ButtonEx CommandParameter="{x:Static Key.Subtract}" />
                    <eye:ButtonEx CommandParameter="{x:Static Key.NumPad7}" />
