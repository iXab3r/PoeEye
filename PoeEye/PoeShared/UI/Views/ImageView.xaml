<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:blue="http://www.nuget.org/Blue.MVVM"
                    xmlns:sharedViewModels="clr-namespace:PoeShared.UI.ViewModels">

    <blue:BoolToVisibilityConverter x:Key="TrueToVisibleConverter" 
                                    TrueValue="Visible" 
                                    FalseValue="Collapsed" />

    <DataTemplate DataType="{x:Type sharedViewModels:ImageViewModel}">
        <Grid>
            <controls:ProgressRing Height="20" Width="20" IsActive="true"
                             Visibility="{Binding IsLoading, Converter={StaticResource TrueToVisibleConverter}}" />

            <Image Source="{Binding ImageSource}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>