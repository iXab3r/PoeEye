<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:blue="http://www.nuget.org/Blue.MVVM"
                    xmlns:sharedViewModels="clr-namespace:PoeShared.UI.ViewModels">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/PoeShared;component/Themes/Converters.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate DataType="{x:Type sharedViewModels:ImageViewModel}">
        <Grid>
            <controls:ProgressRing Height="20" Width="20" IsActive="true"
                                   Visibility="{Binding IsLoading, Converter={StaticResource TrueToVisibleFalseToCollapsedConverter}}" />

            <Image Source="{Binding ImageSource}" />
        </Grid>
    </DataTemplate>

</ResourceDictionary>