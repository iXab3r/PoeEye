<UserControl x:Class="WpfAwesomium.WpfChromium"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:forms="clr-namespace:Awesomium.Windows.Forms;assembly=Awesomium.Windows.Forms"
             xmlns:scaffolding="clr-namespace:PoeShared.Scaffolding;assembly=PoeShared"
             mc:Ignorable="d">
  <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}">
    <scaffolding:DataPiping.DataPipes>
      <scaffolding:DataPipeCollection>
        <scaffolding:DataPipe Source="{Binding ElementName=WebBrowser}" Target="{Binding Browser, Mode=OneWayToSource}" />
      </scaffolding:DataPipeCollection>
    </scaffolding:DataPiping.DataPipes>

    <WindowsFormsHost>
      <forms:WebControl x:Name="WebBrowser" BackgroundImageLayout="None" IsTransparent="True" ViewType="Offscreen"
                        Dock="Fill" />
    </WindowsFormsHost>
  </Grid>
</UserControl>